{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "baseUrl": "./",
  "paths": {
    "@": [
      "src"
    ],
    "@/*": [
      "./src/*"
    ],
    "comps/*": [
      "src/components/*"
    ],
    "views/*": [
      "src/views/*"
    ],
    "model/*": [
      "./src/model/*"
    ],
    " store/*": [
      " ./src/store/*"
    ]
  },
  "types": [
    "vite/client"
  ],
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./src/model/**/*",
    "env.d.ts",
    "canvas-icon.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}